---
const path = Astro.url.pathname.split('/').filter(Boolean);
---

<header class="sticky top-0 z-50 bg-black/70 backdrop-blur-xl border-b border-white/10">
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 py-3
           flex items-center font-mono text-xs sm:text-sm
           text-green-400 overflow-x-auto"
  >

      <a
        href={`/`}
        class="hover:text-white transition"
      >
      <span class="text-green-500 shrink-0">abx@portfolio</span>
      </a>

      <span class="mx-2 text-white/40 shrink-0">:</span>
    <span class="text-blue-400 shrink-0">~</span>

    <div class="flex items-center min-w-0">
      {path.length === 0 ? (
        <span class="ml-2 text-white/60">/</span>
      ) : (
        path.map((segment) => (
          <span class="ml-2 text-white/60 whitespace-nowrap">
            /
            <a
              href={`/${segment}`}
              class="hover:text-white transition"
            >
              {segment}
            </a>
          </span>
        ))
      )}
    </div>

    <span class="ml-2 text-white/40 animate-pulse shrink-0">‚ñç</span>
  </div>
</header>
