---
import resume from "../data/resume.json";

const projectCount = resume?.projects?.items?.length ?? 0;
const researchCount = resume?.research?.items?.length ?? 0;
const workStart = resume?.work?.items?.[0]?.startDate;
const calcYears = (dateStr) => {
  if (!dateStr) return "";
  const start = new Date(dateStr);
  const now = new Date();
  const months =
    now.getFullYear() * 12 + now.getMonth() -
    (start.getFullYear() * 12 + start.getMonth());
  const years = Math.floor(months / 12);
  const rem = months % 12;
  if (years <= 0) return `${rem} mo`;
  return `${years} yr${years > 1 ? "s" : ""} ${rem} mo`;
};

const experienceLabel = workStart ? calcYears(workStart) : "";
---

<section class="page-shell hero-shell">
  <div class="page-inner hero-layout">
    <div class="hero-content">
      <span class="hero-kicker">$ whoami</span>
      <h1 class="hero-title">Abinash S</h1>
      <p class="hero-subtitle">
        Software Engineer focused on backend systems, reliable architectures,
        and production-grade delivery across banking, web, and applied research.
      </p>

      <div class="hero-actions">
        <a href="/resume" class="btn-primary">View Resume</a>
        <a href="/service" class="btn-ghost">Services</a>
        <a href="/contact" class="btn-ghost">Contact</a>
      </div>

      <div class="hero-tags">
        <span class="tag">Java · Spring Boot · Microservices</span>
        <span class="tag">Payments · Transaction Systems</span>
        <span class="tag">ML Research · Cybersecurity</span>
      </div>

      <div class="hero-quick">
        <a class="quick-link" href="https://github.com/AbiXnash" target="_blank">
          GitHub
        </a>
        <span class="quick-divider"></span>
        <span class="quick-note">Open to backend consulting</span>
      </div>

      <div class="hero-stats">
        <div class="stat-card">
          <div class="stat-label">Experience</div>
          <div class="stat-value">{experienceLabel || "1+ year"}</div>
          <div class="stat-sub">Backend systems</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Projects</div>
          <div class="stat-value">{projectCount}</div>
          <div class="stat-sub">Shipped builds</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Research</div>
          <div class="stat-value">{researchCount}</div>
          <div class="stat-sub">Cybersecurity + IIoT</div>
        </div>
      </div>
    </div>

    <div class="hero-card">
      <div class="hero-card-header">
        <span class="hero-kicker">status</span>
        <span class="hero-status">available for select work</span>
      </div>
      <div class="hero-card-body">
        <div class="hero-row">
          <span class="hero-label">Focus</span>
          <span id="focusLine" class="hero-value">Backend reliability & payment flows</span>
        </div>
        <div class="hero-row">
          <span class="hero-label">Stack</span>
          <span class="hero-value">Java · Spring Boot · OracleDB</span>
        </div>
        <div class="hero-row">
          <span class="hero-label">Research</span>
          <span class="hero-value">IIoT intrusion detection systems</span>
        </div>
      </div>
      <div class="hero-card-footer">
        <button id="heartBtn" aria-label="like" class="panel-like">
          <span id="heartIcon">♡</span>
          <span id="heartCount">0</span>
        </button>
        <span class="panel-note">tap to appreciate the work</span>
      </div>
    </div>
  </div>

</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("heartBtn");
    const icon = document.getElementById("heartIcon");
    const countEl = document.getElementById("heartCount");
    const focusLine = document.getElementById("focusLine");

    let count = Number(localStorage.getItem("hero-hearts") || 0);
    countEl.textContent = count;

    btn.addEventListener("click", () => {
      count++;
      localStorage.setItem("hero-hearts", count);
      countEl.textContent = count;

      icon.textContent = "♥";
      btn.classList.add("text-red-400");

      setTimeout(() => {
        icon.textContent = "♡";
      }, 300);
    });

    if (focusLine) {
      const lines = [
        "Backend reliability & payment flows",
        "High-volume transaction systems",
        "Secure infrastructure & auditability",
      ];
      let idx = 0;
      setInterval(() => {
        idx = (idx + 1) % lines.length;
        focusLine.textContent = lines[idx];
      }, 6000);
    }
  });
</script>

