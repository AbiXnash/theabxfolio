<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("heartBtn");
    const icon = document.getElementById("heartIcon");
    const countEl = document.getElementById("heartCount");
    const focusLine = document.getElementById("focusLine");
    const focusBadge = document.getElementById("focusLineBadge");

    let count = Number(localStorage.getItem("hero-hearts") || 0);
    countEl.textContent = count;

    btn.addEventListener("click", () => {
      count++;
      localStorage.setItem("hero-hearts", count);
      countEl.textContent = count;

      icon.textContent = "♥";
      btn.classList.add("text-red-400");

      setTimeout(() => {
        icon.textContent = "♡";
      }, 300);
    });

    if (focusLine) {
      const lines = [
        "Backend reliability & payment flows",
        "High-volume transaction systems",
        "Secure infrastructure & auditability",
      ];
      let idx = 0;
      const update = () => {
        idx = (idx + 1) % lines.length;
        focusLine.textContent = lines[idx];
        if (focusBadge) {
          focusBadge.classList.remove("fade-in");
          void focusBadge.offsetWidth;
          focusBadge.textContent = lines[idx];
          focusBadge.classList.add("fade-in");
        }
      };
      setInterval(update, 6000);
    }
  });
</script>

