---
import "../styles/global.css";

const projects = [
  {
    name: "Net Banking System",
    stack: "Java · Spring · Oracle",
    description:
      "Enterprise-grade net banking application with secure transactions, account lifecycle management, and role-based access.",
  },
  {
    name: "Intrusion Detection System",
    stack: "Python · TensorFlow · CNN + LSTM",
    description:
      "Hybrid deep learning model for multi-class cyber attack detection in IIoT environments.",
  },
  {
    name: "Event Management Platform",
    stack: "Astro · Tailwind · Bun",
    description:
      "Blazing-fast static platform focused on performance, animations, and modern UI delivery.",
  },
];
---

<section class="bg-black px-4 py-16 font-mono text-white sm:px-6 sm:py-20">
  <div class="mx-auto max-w-5xl">
    <p class="text-sm text-green-400">$ ls projects/</p>

    <div class="mt-10 grid grid-cols-1 gap-6">
      {
        projects.map((p) => (
          <div class="group rounded-2xl border border-white/10 bg-white/5 p-6 transition-all duration-300 hover:translate-y-[-2px] hover:border-white/20 hover:bg-white/10 sm:p-7">
            <h2 class="text-base tracking-tight text-white sm:text-lg">
              {p.name}
            </h2>

            <p class="mt-1 text-xs text-blue-400 sm:text-sm">{p.stack}</p>

            <p class="mt-4 font-sans text-sm leading-relaxed text-white/70 sm:text-base">
              {p.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
