---
import '../styles/global.css';

const projects = [
  {
    name: 'Net Banking System',
    stack: 'Java · Spring · Oracle',
    description:
      'Enterprise-grade net banking application with secure transactions, account lifecycle management, and role-based access.',
  },
  {
    name: 'Intrusion Detection System',
    stack: 'Python · TensorFlow · CNN + LSTM',
    description:
      'Hybrid deep learning model for multi-class cyber attack detection in IIoT environments.',
  },
  {
    name: 'Event Management Platform',
    stack: 'Astro · Tailwind · Bun',
    description:
      'Blazing-fast static platform focused on performance, animations, and modern UI delivery.',
  },
];
---

<section
  class="bg-black px-4 sm:px-6 py-16 sm:py-20
         text-white font-mono"
>
<div class="max-w-5xl mx-auto">
      <p class="text-green-400 text-sm">$ ls projects/</p>

      <div class="mt-10 grid grid-cols-1 gap-6">
        {projects.map((p) => (
          <div
          class="group rounded-2xl border border-white/10 bg-white/5
                 p-6 sm:p-7
                 hover:bg-white/10 hover:border-white/20
                 hover:translate-y-[-2px]
                 transition-all duration-300"

          >
            <h2 class="text-base sm:text-lg text-white tracking-tight">
              {p.name}
            </h2>

            <p class="mt-1 text-xs sm:text-sm text-blue-400">
              {p.stack}
            </p>

            <p class="mt-4 font-sans text-sm sm:text-base text-white/70 leading-relaxed">
              {p.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
