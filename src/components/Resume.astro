---
import "../styles/global.css";
import resume from "../data/resume.json";

const formatDate = (date) =>
  date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });

const calcTenure = (startDate, endDate) => {
  if (!startDate) return "";
  const start = new Date(startDate);
  const now = new Date();
  const endLabel = endDate && endDate !== "Present" ? endDate : "Present";

  const months =
    now.getFullYear() * 12 + now.getMonth() -
    (start.getFullYear() * 12 + start.getMonth());
  const years = Math.floor(months / 12);
  const remMonths = months % 12;

  const tenure =
    years > 0
      ? `${years} yr${years > 1 ? "s" : ""} ${remMonths} mo`
      : `${remMonths} mo`;

  return `${tenure} · ${formatDate(start)} – ${endLabel}`;
};
---

<section class="page-shell">
  <div class="page-inner resume-clean">
    <div class="hero-block">
      <span class="hero-kicker">Resume</span>
      <h1 class="hero-title">Experience & Projects</h1>
      <p class="hero-subtitle">
        A clean, structured overview of work, research, and projects with
        expandable details.
      </p>
    </div>

    <div class="resume-sections">
      {Object.entries(resume).map(([sectionKey, section]) => (
        <section class="resume-section">
          <div class="section-header">
            <h2 class="section-title">{section.label}</h2>
            <p class="section-subtitle">{section.description}</p>
          </div>

          <div class="resume-list">
            {section.items.map((item) => {
              const tenure = item.startDate ? calcTenure(item.startDate, item.endDate) : "";
              const showGit = (sectionKey === "research" || sectionKey === "projects") && item.github;
              const showContributors =
                (sectionKey === "research" || sectionKey === "projects") &&
                item.contributors.length > 1;
              const showSkills = Array.isArray(item.skills) && item.skills.length;

              return (
                <details class="resume-item">
                  <summary class="item-summary">
                    <div class="item-main">
                      <div class="item-title">{item.title}</div>
                      <div class="item-intro">{item.intro}</div>
                      {tenure && <div class="item-tenure">{tenure}</div>}
                    </div>
                    <div class="item-meta">
                      {item.meta && <span class="chip">{item.meta}</span>}
                      {showGit && <span class="chip accent">source</span>}
                      <span class="chev">⌄</span>
                    </div>
                  </summary>

                  <div class="item-body">
                    {showSkills && (
                      <div class="item-block">
                        <div class="block-label">Skills</div>
                        <div class="skill-row">
                          {item.skills.map((s) => (
                            <span class="skill-pill">{s}</span>
                          ))}
                        </div>
                      </div>
                    )}

                    <div class="item-block">
                      <div class="block-label">Details</div>
                      <pre class="detail-pre">{item.details.trim()}</pre>
                    </div>

                    {item.note && (
                      <div class="item-block">
                        <div class="block-label">Note</div>
                        <p class="detail-note">{item.note}</p>
                      </div>
                    )}

                    {showContributors && (
                      <div class="item-block">
                        <div class="block-label">Contributors</div>
                        <ul class="detail-list">
                          {item.contributors.map((c) => (
                            <li>{c.name} — {c.role}</li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {Array.isArray(item.references) && item.references.length > 0 && (
                      <div class="item-block">
                        <div class="block-label">References</div>
                        <ul class="detail-list">
                          {item.references.map((r) => (
                            <li><a href={r.url} target="_blank">{r.label}</a></li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {item.github && (
                      <div class="item-block">
                        <div class="block-label">Source</div>
                        <a class="detail-link" href={item.github} target="_blank">
                          View repository
                        </a>
                      </div>
                    )}
                  </div>
                </details>
              );
            })}
          </div>
        </section>
      ))}
    </div>
  </div>
</section>

<style>
  .resume-clean {
    gap: 3.5rem;
  }

  .resume-sections {
    display: grid;
    gap: 3rem;
  }

  .resume-section {
    display: grid;
    gap: 1.5rem;
  }

  .section-header {
    display: grid;
    gap: 0.4rem;
  }

  .section-title {
    font-size: clamp(1.4rem, 3vw, 1.9rem);
    margin: 0;
  }

  .section-subtitle {
    color: var(--text-muted);
  }

  .resume-list {
    display: grid;
    gap: 1rem;
  }

  .resume-item {
    border: 1px solid var(--border-soft);
    border-radius: 20px;
    background: var(--bg-elevated);
    padding: 0.4rem 1.4rem;
    backdrop-filter: blur(16px);
    transition: transform 180ms ease, border-color 180ms ease;
  }

  .resume-item[open] {
    border-color: rgba(255, 255, 255, 0.28);
    transform: translateY(-2px);
  }

  .item-summary {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    list-style: none;
    cursor: pointer;
    padding: 1.2rem 0;
  }

  .item-summary::-webkit-details-marker {
    display: none;
  }

  .item-main {
    display: grid;
    gap: 0.4rem;
  }

  .item-title {
    font-size: 1.1rem;
    color: var(--text-primary);
  }

  .item-intro {
    color: var(--text-muted);
  }

  .item-tenure {
    font-size: 0.75rem;
    color: var(--text-dim);
  }

  .item-meta {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    flex-wrap: wrap;
    color: var(--text-dim);
    font-size: 0.75rem;
  }

  .chev {
    margin-left: auto;
  }

  .chip {
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.08);
  }

  .chip.accent {
    background: rgba(142, 242, 193, 0.2);
    color: var(--accent);
  }

  .chev {
    color: var(--text-dim);
    font-size: 0.9rem;
  }

  .item-body {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1.2rem 0 1.6rem;
    display: grid;
    gap: 1rem;
  }

  .item-block {
    display: grid;
    gap: 0.5rem;
  }

  .block-label {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .detail-pre {
    white-space: pre-wrap;
    font-family: "Space Grotesk", sans-serif;
    color: var(--text-muted);
  }

  .detail-note {
    color: var(--text-muted);
  }

  .detail-list {
    display: grid;
    gap: 0.4rem;
    color: var(--text-muted);
  }

  .detail-link,
  .detail-list a {
    color: var(--accent-alt);
  }

  .skill-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-pill {
    padding: 0.3rem 0.7rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.08);
    color: var(--text-muted);
    font-size: 0.75rem;
  }

  @media (min-width: 900px) {
    .item-summary {
      align-items: center;
    }
  }

  @media (max-width: 899px) {
    .item-summary {
      flex-direction: column;
      align-items: flex-start;
    }

    .item-meta {
      width: 100%;
      justify-content: space-between;
      gap: 0.4rem;
    }

    .chev {
      margin-left: 0;
    }
  }
</style>
