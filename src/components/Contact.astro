<div id="copyToast" class="copy-toast">Email copied</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const copyBtn = document.getElementById("copyEmail");
    const emailLink = document.getElementById("primaryEmail");
    const toast = document.getElementById("copyToast");
    const briefForm = document.getElementById("briefForm");

    if (copyBtn && emailLink && toast) {
      copyBtn.addEventListener("click", async () => {
        try {
          await navigator.clipboard.writeText(emailLink.textContent.trim());
          toast.classList.add("show");
          setTimeout(() => toast.classList.remove("show"), 1500);
        } catch (err) {
          toast.textContent = "Copy failed";
          toast.classList.add("show");
          setTimeout(() => {
            toast.classList.remove("show");
            toast.textContent = "Email copied";
          }, 1500);
        }
      });
    }

    if (briefForm) {
      briefForm.addEventListener("submit", (event) => {
        event.preventDefault();
        const name = document.getElementById("briefName").value.trim();
        const org = document.getElementById("briefOrg").value.trim();
        const summary = document.getElementById("briefSummary").value.trim();
        const subject = encodeURIComponent("Project brief from portfolio");
        const body = encodeURIComponent(
          `Name: ${name || "-"}\nOrganization: ${org || "-"}\n\nSummary:\n${summary || "-"}`,
        );
        window.location.href = `mailto:abinash@theabx.in?subject=${subject}&body=${body}`;
      });
    }

    const repoList = document.getElementById("repoList");
    if (repoList) {
      const formatDate = (iso) => new Date(iso).toLocaleString();
      const shortSha = (sha) => (sha ? sha.slice(0, 7) : "");
      const escapeHtml = (str) =>
        String(str || "")
          .replace(/&/g, "&amp;")
          .replace(/</g, "&lt;")
          .replace(/>/g, "&gt;");

      fetch("https://api.github.com/users/AbiXnash/repos?per_page=5&sort=updated")
        .then((res) => res.json())
        .then(async (repos) => {
          if (!Array.isArray(repos)) return;
          const commitSets = await Promise.all(
            repos.map((repo) =>
              fetch(`https://api.github.com/repos/${repo.owner.login}/${repo.name}/commits?per_page=3`)
                .then((res) => res.json())
                .then((commits) => ({ repo, commits: Array.isArray(commits) ? commits : [] }))
                .catch(() => ({ repo, commits: [] })),
            ),
          );

          repoList.innerHTML = commitSets
            .map(({ repo, commits }) => {
              const commitItems = commits
                .map(
                  (c) => `
                    <div class="commit-item">
                      <div class="commit-message">${escapeHtml(c.commit?.message || "Commit")}</div>
                      <div class="commit-meta">
                        <span class="commit-sha">${shortSha(c.sha)}</span>
                        <span>${formatDate(c.commit?.author?.date)}</span>
                      </div>
                    </div>
                  `,
                )
                .join("");

              return `
                <div class="repo-item">
                  <div class="repo-head">
                    <div>
                      <div class="repo-badge">Repository</div>
                      <div class="repo-title">${escapeHtml(repo.name)}</div>
                      <div class="repo-desc">${escapeHtml(repo.description || "No description available.")}</div>
                    </div>
                    <a class="repo-link" href="${repo.html_url}" target="_blank">View repo</a>
                  </div>
                  <div class="commit-list">${commitItems || "<div class='repo-empty'>No recent commits.</div>"}</div>
                </div>
              `;
            })
            .join("");
        })
        .catch(() => {
          repoList.innerHTML = "<div class='repo-empty'>Unable to load GitHub activity.</div>";
        });
    }
  });
</script>

