</footer>

<style>
  .footer-shell {
    position: relative;
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    background: radial-gradient(circle at 20% 20%, rgba(30, 38, 60, 0.35), transparent 55%),
      radial-gradient(circle at 80% 30%, rgba(12, 14, 22, 0.9), transparent 50%),
      rgba(8, 8, 16, 0.28);
    backdrop-filter: blur(26px);
  }

  .footer-orb {
    position: absolute;
    inset: auto;
    width: 420px;
    height: 420px;
    right: -140px;
    top: -160px;
    border-radius: 999px;
    background: radial-gradient(circle, rgba(0, 0, 0, 0.9), rgba(20, 32, 58, 0.2) 55%, transparent 70%);
    box-shadow: inset 0 0 120px rgba(0, 0, 0, 0.8), 0 0 80px rgba(20, 32, 58, 0.45);
    opacity: 0.9;
  }

  .footer-inner {
    position: relative;
    z-index: 1;
    max-width: 1080px;
    margin: 0 auto;
    padding: 3.5rem 1.5rem 3rem;
    display: grid;
    gap: 2.5rem;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .footer-kicker {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .footer-title {
    font-family: "Fraunces", serif;
    font-size: 1.6rem;
  }

  .footer-subtitle {
    color: var(--text-muted);
    max-width: 320px;
  }

  .footer-status {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.85rem;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: var(--accent);
    box-shadow: 0 0 0 6px rgba(142, 242, 193, 0.12);
  }

  .footer-nav,
  .footer-right {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .footer-nav-title {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .footer-nav a,
  .footer-right a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    transition: color 160ms ease;
    line-height: 1.1;
  }

  .footer-nav a:hover,
  .footer-right a:hover {
    color: #fff;
  }

  .footer-copy {
    color: var(--text-dim);
    font-size: 0.8rem;
    margin-top: 0.4rem;
  }

  .footer-icon {
    width: 14px;
    height: 14px;
    color: var(--accent-alt);
    opacity: 0.75;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 860px) {
    .footer-inner {
      grid-template-columns: 1.2fr 0.6fr 0.8fr;
      align-items: start;
    }
  }
</style>

<script>
  const uptimeEl = document.getElementById("uptime");
  if (uptimeEl) {
    const start = Date.now();
    setInterval(() => {
      const diff = Date.now() - start;
      const h = String(Math.floor(diff / 3600000)).padStart(2, "0");
      const m = String(Math.floor((diff % 3600000) / 60000)).padStart(2, "0");
      const s = String(Math.floor((diff % 60000) / 1000)).padStart(2, "0");
      uptimeEl.textContent = `uptime ${h}:${m}:${s}`;
    }, 1000);
  }
</script>
